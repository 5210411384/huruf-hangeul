<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_polosan"
    tools:context=".MenuMateri">

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:fontFamily="@font/more_sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materi"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:textAllCaps="false"
                    android:fontFamily="@font/more_sugar"
                    android:id="@+id/konsonan_dasar"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_bg_menu"
                    android:text="Huruf Konsonan Dasar"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_margin="10dp"/>

                <Button
                    android:textAllCaps="false"
                    android:fontFamily="@font/more_sugar"
                    android:id="@+id/vokal_dasar"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_bg_menu"
                    android:text="Huruf Vokal Dasar"
                    android:textSize="19sp"
                    android:textColor="#ffff"
                    android:layout_margin="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <Button
                    android:id="@+id/vokal_kombinasi"
                    android:textAllCaps="false"
                    android:fontFamily="@font/more_sugar"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_bg_menu"
                    android:text="Huruf Vokal Kombinasi"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_margin="10dp"/>

                <Button
                    android:textAllCaps="false"
                    android:fontFamily="@font/more_sugar"
                    android:id="@+id/konsonan_keras"
                    android:layout_width="160dp"
                    android:layout_height="65dp"
                    android:background="@drawable/btn_bg_menu"
                    android:text="Huruf Konsonan Keras"
                    android:textSize="18sp"
                    android:textColor="#ffff"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sapaan_baru" />

    </RelativeLayout>

</LinearLayout>