<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_polosan"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center">

        <TextView
            android:fontFamily="@font/more_sugar"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belajar \nBahasa Korea"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textColor="#FFFFFFFF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/more_sugar"
                android:id="@+id/menu_materi"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_bg_menu"
                android:text="Materi"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:layout_margin="10dp"/>

            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/more_sugar"
                android:id="@+id/budaya_korea"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_bg_menu"
                android:text="Budaya Korea"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:layout_margin="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/KeQuiz"
                android:textAllCaps="false"
                android:fontFamily="@font/more_sugar"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_bg_menu"
                android:text="Quiz"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:layout_margin="10dp"/>

            <Button
                android:textAllCaps="false"
                android:fontFamily="@font/more_sugar"
                android:id="@+id/about"
                android:layout_width="160dp"
                android:layout_height="65dp"
                android:background="@drawable/btn_bg_menu"
                android:text="About"
                android:textSize="18sp"
                android:textColor="#ffff"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <Button
            android:textAllCaps="false"
            android:fontFamily="@font/more_sugar"
            android:id="@+id/exit_button"
            android:layout_width="160dp"
            android:layout_height="65dp"
            android:background="@drawable/btn_bg_menu"
            android:text="Exit"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sapaan_baru" />

    </RelativeLayout>

</LinearLayout>